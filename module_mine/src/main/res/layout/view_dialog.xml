<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/style_circular_bwhite"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="#FF008AFF"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/skip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#990679f5"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/dialogMessage_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:maxHeight="180dp"
        android:paddingBottom="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="30dp"
        android:scrollbars="vertical"
        android:text="内容"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/twoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_negative_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_left_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="否"
            android:textColor="@color/dlg_btn_color_selector"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#990679f5" />

        <TextView
            android:id="@+id/dialog_positive_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_right_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="是"
            android:textColor="@color/dlg_btn_color_selector"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="是"
        android:textColor="#FF008AFF"
        android:textSize="16sp" />

</LinearLayout>