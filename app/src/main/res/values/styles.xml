<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
    </style>

    <!-- 资讯功能item样式 -->
    <style name="information_title_style">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/color_title_text</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/margin_3</item>
    </style>
</resources>
