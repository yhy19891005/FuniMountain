<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_house"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:background="@drawable/hm_left_select"
                android:gravity="center"
                android:text="@string/hm_shop_house_details"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_save_house"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:background="@drawable/hm_right_unselect"
                android:gravity="center"
                android:text="@string/hm_save_house_details"
                android:textColor="#DE000000"
                android:textSize="14sp" />
        </LinearLayout>

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/hm_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="true"
            app:stl_defaultTabTextColor="@color/dy_them_color_F66"
            app:stl_defaultTabTextHorizontalPadding="8dp"
            app:stl_defaultTabTextMinWidth="104dp"
            app:stl_defaultTabTextSize="14sp"
            app:stl_distributeEvenly="false"
            app:stl_dividerColor="@color/white"
            app:stl_dividerThickness="0dp"
            app:stl_drawDecorationAfterTab="true"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="@color/dy_them_color_blue"
            app:stl_indicatorCornerRadius="1dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="4dp"
            app:stl_indicatorWidth="24dp"
            app:stl_indicatorWithoutPadding="false"
            app:stl_overlineColor="@color/white"
            app:stl_overlineThickness="0dp"
            app:stl_titleOffset="auto_center"
            app:stl_underlineColor="@color/dy_FEE"
            app:stl_underlineThickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                layout="@layout/hm_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include
                layout="@layout/data_loading_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>