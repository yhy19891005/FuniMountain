<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- popwindow anim -->
    <style name="PopWindowAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomProgressStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">25dip</item>
        <item name="android:maxWidth">25dip</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>


    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">15</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_title_text</item>
    </style>
</resources>
